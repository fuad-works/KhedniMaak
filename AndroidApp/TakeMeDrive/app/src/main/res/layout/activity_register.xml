<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity">

    <LinearLayout
        android:orientation="vertical"
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:textSize="24dp"
            android:fontFamily="@font/cairo"
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="إنشاء حساب جديد"
            android:textAlignment="center" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="158dp"
            app:srcCompat="@drawable/ic_baseline_supervised_user_circle_24"
            tools:ignore="VectorDrawableCompat" />

        <EditText
            android:layout_marginTop="10dp"
            android:background="@drawable/text_bg"
            android:padding="10dp"
            android:fontFamily="@font/cairo"
            android:id="@+id/ed_reg_user_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="اسم المستخدم"
            android:inputType="textPersonName" />

        <EditText
            android:layout_marginTop="10dp"
            android:background="@drawable/text_bg"
            android:padding="10dp"
            android:fontFamily="@font/cairo"
            android:id="@+id/ed_reg_pass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="كلمة المرور"
            android:inputType="textPassword" />

        <EditText
            android:layout_marginTop="10dp"
            android:background="@drawable/text_bg"
            android:padding="10dp"
            android:fontFamily="@font/cairo"
            android:id="@+id/ed_reg_pass_rep"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="تأكيد كلمة المرور"
            android:inputType="textPassword" />

        <Button
            android:id="@+id/button3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/btn_bg"
            android:fontFamily="@font/cairo"
            android:onClick="DoRegister"
            android:text="تسجيل"
            android:textColor="#FFF"
            android:textSize="18sp"
            android:textStyle="bold" />

    </LinearLayout>

</ScrollView>