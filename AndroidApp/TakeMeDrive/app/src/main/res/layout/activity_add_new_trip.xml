<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddNewTripActivity">

    <LinearLayout
        android:orientation="vertical"
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/cairo"
            android:text="نموذج بيانات الرحلة"
            android:textAlignment="center"
            android:textSize="30sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="match_parent"
            android:layout_height="139dp"
            app:srcCompat="@drawable/ic_baseline_pin_drop_24"
            tools:ignore="VectorDrawableCompat" />

        <EditText
            android:layout_marginTop="10dp"
            android:background="@drawable/text_bg"
            android:padding="10dp"
            android:fontFamily="@font/cairo"
            android:id="@+id/ed_trip_car"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="نوع السيارة"
            android:inputType="text" />

        <EditText
            android:layout_marginTop="10dp"
            android:background="@drawable/text_bg"
            android:padding="10dp"
            android:fontFamily="@font/cairo"
            android:id="@+id/ed_trip_start_place"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="مركز الانطلاق"
            android:inputType="text" />


        <EditText
            android:layout_marginTop="10dp"
            android:background="@drawable/text_bg"
            android:padding="10dp"
            android:fontFamily="@font/cairo"
            android:id="@+id/ed_trip_end_place"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="الوجهة النهائية"
            android:inputType="text" />


        <EditText
            android:layout_marginTop="10dp"
            android:background="@drawable/text_bg"
            android:padding="10dp"
            android:fontFamily="@font/cairo"
            android:id="@+id/ed_trip_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="تاريخ الرحلة"
            android:inputType="date" />

        <EditText
            android:layout_marginTop="10dp"
            android:background="@drawable/text_bg"
            android:padding="10dp"
            android:fontFamily="@font/cairo"
            android:id="@+id/ed_trip_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="وقت الإنطلاق"
            android:inputType="time" />


        <EditText
            android:id="@+id/ed_trip_duration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/text_bg"
            android:ems="10"
            android:fontFamily="@font/cairo"
            android:hint="المدة (دقائق)"
            android:inputType="number"
            android:padding="10dp" />

        <EditText
            android:id="@+id/ed_trip_seats"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/text_bg"
            android:ems="10"
            android:fontFamily="@font/cairo"
            android:hint="عدد المقاعد"
            android:inputType="number"
            android:padding="10dp" />

        <EditText
            android:layout_marginTop="10dp"
            android:background="@drawable/text_bg"
            android:padding="10dp"
            android:fontFamily="@font/cairo"
            android:id="@+id/ed_trip_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="سعر الحجز للمقعد"
            android:inputType="number" />

        <Button
            android:id="@+id/button3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/btn_bg"
            android:fontFamily="@font/cairo"
            android:onClick="DoSave"
            android:text="حفظ البيانات"
            android:textColor="#FFF"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Button
            android:visibility="gone"
            android:id="@+id/btn_del"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/btn_bg"
            android:fontFamily="@font/cairo"
            android:onClick="removeit"
            android:text="إلغاء الرحلة"
            android:textColor="#FFF"
            android:textSize="18sp"
            android:textStyle="bold" />

    </LinearLayout>

</ScrollView>